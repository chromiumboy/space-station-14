<BoxContainer xmlns="https://spacestation14.io"
              xmlns:ui="clr-namespace:Content.Client.TurretControls"
              Orientation="Horizontal"
              Margin="10 5 10 2.5">
    
    <Control SetWidth="200">
        <Label Name="SettingLabel" Text="???" StyleClasses="ConsoleText"
               HorizontalAlignment="Left" Margin="0 0 10 0"/>
    </Control>
    
    <ui:MonoToneButton Name="IgnoreButton"
                       Text="{Loc 'turret-controls-window-ignore'}"
                       StyleClasses="OpenRight"
                       Pressed="False"
                       ToggleMode="True"
                       HorizontalExpand="True"/>
    
    <ui:MonoToneButton Name="TargetButton"
                       Text="{Loc 'turret-controls-window-target'}"
                       StyleClasses="OpenLeft"
                       Pressed="True"
                       ToggleMode="True"
                       HorizontalExpand="True"/>
</BoxContainer>
